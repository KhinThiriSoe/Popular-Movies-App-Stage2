<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ui.movies.details.view.DetailsActivity"
        tools:showIn="@layout/activity_detail">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ProgressBar
                android:visibility="gone"
                android:id="@+id/progress_bar"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:visibility="gone"
                android:id="@+id/root_layout"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="@dimen/standard_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="180dp">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:padding="@dimen/standard_margin"
                        android:id="@+id/img_poster"
                        android:scaleType="centerCrop"
                        android:layout_height="match_parent"/>

                <LinearLayout android:layout_width="0dp"
                              android:layout_weight="0.7"
                              android:layout_gravity="center_vertical"
                              android:orientation="vertical"
                              android:layout_height="wrap_content">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:text="@string/average_rating"
                                android:textStyle="bold"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/txt_average_vote"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:text="@string/genre_type"
                                android:textStyle="bold"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/txt_genre"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:text="@string/release_date"
                                android:textStyle="bold"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/txt_release_date"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                    android:id="@+id/txt_title_overview"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:text="Overviews"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/txt_overview"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:layout_marginRight="@dimen/standard_margin"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:textSize="16sp"
                    android:paddingTop="@dimen/standard_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="@dimen/standard_margin"
                  android:background="#E0E0E0"/>

            <TextView
                    android:text="Trailers"
                    android:layout_margin="@dimen/standard_margin"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_trailers"
                    android:scrollbars="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginTop="@dimen/standard_margin"
                  android:background="#E0E0E0"/>

            <TextView
                    android:id="@+id/txt_title_reviews"
                    android:text="Reviews"
                    android:textSize="16sp"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_reviews"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </FrameLayout>

</androidx.core.widget.NestedScrollView>